.my-page {
  height: 100vh;
  /* background-color: #ccc; */
}

.top {
  width: 100%;
  height: 280px;
  display: flex;
  align-items: center;
  /* background: linear-gradient(to top, #2c2c2c, 60%, #C1CAD6); */
  background: radial-gradient(circle, #2c2c2c, 60%, #C1CAD6);
  clip-path: ellipse(80% 60% at 50% 40%);
}

.user-image {
  width: 80px;
  height: 80px;
  background-color: #eee;
  border-radius: 50%;
  margin-left: 20px;
  margin-right: 20px;
}

.user-image image {
  border-radius: 50%;
}

.user-name {
  font-size: 16px;
  color: #fff;
}

.container {
  background-color: #fff;
  margin: 0 20px;
  position: relative;
  top: -60px;
  border-radius: 15px;
  padding: 20px 0;
}

.van-hairline--top-bottom:after {
  border-width: 0 !important;
  border-top-width: 0 !important;
}

/* 联系客服按钮样式 */
.contact-support {
  margin: 10px 0;
}

.contact-button {
  background-color: transparent;
  border: none;
  text-align: left;
  padding: 10px;
  display: flex;
  align-items: center;
  width: 100%;
}

.message-btn {
  float: right;
  margin-bottom: 15px;
}
